{
	"name": "@elrest/edesign-library-messages",
	"description": "Elrest - eDesign - Library Messages",
	"license": "2023 Elrest AutomationsSysteme GMBH",
	"version": "1.0.242",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"scripts": {
		"test": "nyc mocha",
		"start:dev": "npx nodemon --legacy-watch --config ./nodemon.json",
		"build": "yarn clean && tsc && yarn docs",
		"build:watch": "nodemon",
		"docs": "npx typedoc --options ./typedoc.json",
		"publish:patch": "yarn build && yarn publish --patch --verbose",
		"clean": "npx rimraf ./build ./.build.json",
		"cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
		"cover:unit": "nyc --silent npm run test:unit",
		"cover:integration": "nyc --silent --no-clean npm run test:integration",
		"cover:report": "nyc report --reporter=lcov --reporter=text"
	},
	"dependencies": {
		"pm2": "^5.3.0",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.4.8",
		"@types/uuid": "^9.0.2",
		"eslint": "^8.51.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.1",
		"nyc": "^15.1.0",
		"rimraf": "^5.0.1",
		"string-width": "^6.1.0",
		"ts-node": "^10.9.1",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
	}
}
